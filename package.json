{
    "name": "infura",
    "label": "Infura Package",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.3.7",
            "instanceId": "shared"
        }
    ],
    "configurationBuilder": "/configurationBuilder.js",
    "configuration": [
        {
            "name": "apiKey",
            "label": "API Key",
            "type": "text"
        },
        {
            "name": "webhook",
            "label": "Webhook URL",
            "type": "label",
            "value": "config.WEBHOOK_URL"
        },
        {
            "name": "INFURA_API_BASE_URL",
            "label": "Infura Api Url",
            "type": "label",
            "value": "https://api.example.com/v1/ // TODO: Set the base url for the api"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Event triggered when there is a webhook coming from Infura."
        },
        {
            "label": "Callback",
            "name": "callback",
            "description": "Happens when a async process is finished"
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "flowStep",
            "namespace": "steps",
            "path": "/flowSteps/apiCallInfura"
        }
    ]
}